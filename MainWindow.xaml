<Window x:Class="Econolodge.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Econolodge"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="Orange">
        <Label Content="Login" HorizontalAlignment="Left" Margin="235,99,0,0" VerticalAlignment="Top" Width="194" Height="38" FontSize="20"/>
        <Label Content="Username" HorizontalAlignment="Left" Margin="100,163,0,0" VerticalAlignment="Top" Width="135" Height="39" FontSize="20" >

        </Label>
        <Label Content="Password" HorizontalAlignment="Left" Margin="100,255,0,0" VerticalAlignment="Top" Width="97" Height="45" FontSize="20"/>
        <TextBox x:Name="textUsername" HorizontalAlignment="Left" Margin="235,163,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="194" Height="40" FontSize="20"/>
        <PasswordBox x:Name="textPassword" HorizontalAlignment="Left" Margin="235,255,0,0" VerticalAlignment="Top" Width="194" Height="45"/>

        <Button x:Name="Login" Content="Login" HorizontalAlignment="Left" Margin="235,348,0,0" VerticalAlignment="Top" Width="194" Height="33" FontSize="20" Click="Login_Click"/>
        

    </Grid>
</Window>
